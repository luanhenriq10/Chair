<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MenuBarStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.333</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:drawingCacheQuality">high</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MainInfoRoundField">

        <item name="android:height">60dp</item>
        <item name="android:width">260dp</item>

        <item name="android:bottomLeftRadius">20dp</item>
        <item name="android:bottomRightRadius">20dp</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
        <item name="android:background">@drawable/rectangle_rounded_shape</item>


    </style>

    <style name="LargeTextView" parent="SmallTextViewAbout">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="SmallTextViewAbout" parent="TemplateWrapContent">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TemplateWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
