<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              tools:context="com.chaircare.app.About">

    <include layout="@layout/menu_top_about" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <ImageView
                android:src="@drawable/logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

        <TextView
                android:id="@+id/about_version"
                style="@style/LargeTextView"
                android:layout_marginTop="15dp"

                android:text="Versão 1.0"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"/>


        <TextView
                android:id="@+id/about_year"
                style="@style/LargeTextView"
                android:layout_marginTop="15dp"
                android:text="© 2015 HBros."
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"/>

        <TextView
                android:id="@+id/about_direitos"
                style="@style/LargeTextView"
                android:layout_marginTop="15dp"
                android:text="Todos os direitos reservados."
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"/>

        <TextView
                android:id="@+id/about_powered"
                style="@style/LargeTextView"
                android:layout_marginTop="150dp"

                android:gravity="bottom"
                android:text="Powered by ©ZeebraLabs."
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"/>



    </LinearLayout>






</LinearLayout>
